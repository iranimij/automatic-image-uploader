# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org
# Adapted from https://core.trac.wordpress.org/browser/trunk/.editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
tab_width = 4

[*.{json,yml,babelrc}]
indent_style = space
tab_width = 2

[*.{scss,css,less}]
indent_style = space
tab_width = 4

[*.yml]
indent_style = space
indent_size = 2

[{*.txt,wp-config-sample.php}]
end_of_line = crlf
